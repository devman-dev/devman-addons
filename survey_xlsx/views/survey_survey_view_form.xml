<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="view_survey_survey_form_inherit" model="ir.ui.view">
        <field name="name">survey.survey.form.inherit</field>
        <field name="model">survey.survey</field>
        <field name="inherit_id" ref="survey.survey_survey_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='oe_button_box' and @name='button_box']" position="inside">
                <button name="action_smart_button_exportar_xlsx"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-download">
                    Exportar Excel
                </button>
            </xpath>
        </field>
    </record>
</odoo>