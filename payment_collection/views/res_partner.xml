<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_partner_form_view_inherit_product" model="ir.ui.view">
        <field name="name">res.partner.view.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <xpath expr="//group[1]" position="before">
                <group>
                    <group>
                        <field name="cuit_account_source" />
                        <field name="cbu_account_source" />
                        <field name="cvu_account_source" />
                        <field name="alias_account_source" />
                        <field name="name_account_source" />
                    </group>
                    <group>
                        <field name="cuit_destination" />
                        <field name="cbu_destination" />
                        <field name="cvu_destination" />
                        <field name="alias_destination" />
                        <field name="name_account_destination" />
                    </group>
                </group>
            </xpath>
            <xpath expr="//page[@name='internal_notes']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//page[@name='contact_addresses']" position="attributes">
                <attribute name="autofocus">0</attribute>
            </xpath>
            <xpath expr="//page[@name='contact_addresses']" position="before">
                <page string="Datos Credenciales de Cta Origen" autofocus="autofocus">
                    <field name="comment"
                        placeholder="Ingresar los datos de las credenciales de acceso de la
                    cuenta origen..." />
                </page>
            </xpath>
        </field>
    </record>

</odoo>