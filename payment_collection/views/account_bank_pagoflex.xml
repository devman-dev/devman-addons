<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="account_bank_pagoflex_action" model="ir.actions.act_window">
        <field name="name">Cuentas Bancarias</field>
        <field name="res_model">account.bank.pagoflex</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="account_bank_pagoflex_view_tree" model="ir.ui.view">
        <field name="name">account.bank.pagoflex.view.tree</field>
        <field name="model">account.bank.pagoflex</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="name" />
                <field name="cuit" />
                <field name="alias" />
                <field name="cvu" />
                <field name="cbu" />
            </tree>
        </field>
    </record>

    <record id="account_bank_pagoflex_view_form" model="ir.ui.view">
        <field name="name">account.bank.pagoflex.view.form</field>
        <field name="model">account.bank.pagoflex</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="cuit" />
                        <field name="alias" />
                        <field name="cvu" />
                        <field name="cbu" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>