<odoo>
    <record id="view_bank_statement_tree" model="ir.ui.view">
        <field name="name">bank.statement.tree</field>
        <field name="model">bank.statement</field>
        <field name="arch" type="xml">
            <tree>
                <field name="date"/>
                <field name="amount"/>
                <field name="titular"/>
                <field name="cuit"/>
                <field name="bank"/>
                <field name="cvu"/>
                <field name="cbu"/>
                <field name="alias"/>
                <field name="id_coelsa"/>
                <field name="reference"/>
            </tree>
        </field>
    </record>

    <record id="view_bank_statement_form" model="ir.ui.view">
        <field name="name">bank.statement.form</field>
        <field name="model">bank.statement</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="date"/>
                        <field name="amount"/>
                        <field name="titular"/>
                        <field name="cuit"/>
                        <field name="bank"/>
                        <field name="cvu"/>
                        <field name="cbu"/>
                        <field name="alias"/>
                        <field name="id_coelsa"/>
                        <field name="reference"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
